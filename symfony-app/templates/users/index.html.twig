{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.26.0/dist/bootstrap-table.min.css">
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        tfoot input {
            width: 100%;
            padding: 3px;
            box-sizing: border-box;
        }

        /* Table sort indicators */

        th.sortable {
            position: relative;
            cursor: pointer;
        }

        th.sortable::after {
            font-family: FontAwesome;
            content: "\f0dc";
            position: absolute;
            right: 8px;
            color: #999;
        }

        th.sortable.asc::after {
            content: "\f0d8";
        }

        th.sortable.desc::after {
            content: "\f0d7";
        }

        th.sortable:hover::after {
            color: #333;
        }

        form .row {
            padding: 5px;
        }

        form .col .mb-3 {
            display: flex;
            align-items: center;
        }

        label.form-label {
            font-size: 52%;
            padding-right: 3px;
            margin-bottom: 0;
        }

        .form-label:after {
            content: '\00a0\00a0';
        }
</style>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="/ajax.js"></script>
{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    {{ form_start(form,{'attr': {'class': 'form-inline'}}) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.first_name) }}
        </div>
        <div class="col">
            {{ form_row(form.last_name) }}
        </div>
        <div class="col">
            {{ form_row(form.gender) }}
        </div>
        <div class="col">
            {{ form_row(form.birthdate_from) }}
        </div>
        <div class="col">
            {{ form_row(form.birthdate_to) }}
        </div>
    </div>
    {{ form_end(form) }}
    <table id="users">
        <thead>
            <tr>
                <th class="sortable first_name">Imię</th>
                <th class="sortable last_name">Nazwisko</th>
                <th class="sortable gender">Płeć</th>
                <th class="sortable birthdate">Data urodzenia</th>
                <th class="action">Akcja</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <th class="first_name">Imię</th>
                <th class="last_name">Nazwisko</th>
                <th class="gender">Płeć</th>
                <th class="birthdate">Data urodzenia</th>
            </tr>
        </tfoot>
    </table>
{% endblock %}